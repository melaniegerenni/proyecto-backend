<div class="d-flex m-3 gap-5">
  <div>
    <h4>Add product</h4>
    <form id="add" class="d-flex flex-column gap-2">
      <label>
        Title:
        <input type="text" name="title" />
      </label>
      <label>
        Description:
        <input type="text" name="description" />
      </label>
      <label>
        Code:
        <input type="number" name="code" />
      </label>
      <label>
        Price:
        <input type="number" name="price" />
      </label>
      <label>
        Stock:
        <input type="number" name="stock" />
      </label>
      <label>
        Category:
        <input type="text" name="category" />
      </label>
      <input type="submit" value="Add" />
    </form>
  </div>
  <div>
    <h4>Delete product</h4>
    <form id="delete">
      <label>ID: <input type="text" name="idDelete"/></label>
      <input type="submit" value="Delete" />
    </form>
  </div>
</div>
<div class="m-3">
  <h4>Products</h4>
  <ul id="products">
    {{#each products}}
      <li>{{this.title}}: ${{this.price}}</li>
    {{/each}}
  </ul>
</div>

